<tal:block tal:define="dades_unitat context/@@genweb.upc.utils/getDadesUnitat;
                       has_dades_unitat python:dades_unitat and not dades_unitat.get('error', False);
                       upc_config context/@@genweb.upc.utils/genwebUPCConfig;"
           tal:condition="upc_config/contacte_al_peu"
           i18n:domain="genweb6.upc">

  <div class="footer-contact" role="contentinfo" tal:condition="has_dades_unitat">
    <div class="row">
      <div class="col-md-4">
        <h2 i18n:translate="">On som</h2>
        <iframe class="footer-contact-map" width="100%" height="300" frameborder="0"
                scrolling="no" marginheight="0" marginwidth="0"
                tal:attributes="src dades_unitat/google_maps | nothing">
          Google Maps
        </iframe>
      </div>
      <div class="col-md-4 offset-md-1">
        <h2 i18n:translate="">Contacte</h2>
        <address>
          <p tal:content="dades_unitat/adreÃ§a | nothing">
            C. Jordi Girona, 1-3. 08034 Barcelona
          </p>
          <p tal:condition="dades_unitat/telefon">
            <span i18n:translate="">Tel.</span>:
            <span tal:content="dades_unitat/telefon">93 401 00 00</span>
          </p>
          <p tal:condition="dades_unitat/fax">
            <span i18n:translate="">Fax</span>:
            <span tal:content="dades_unitat/fax">93 401 65 04</span>
          </p>
          <p tal:condition="dades_unitat/email">
            <span i18n:translate="">E-mail</span>:
            <a tal:content="dades_unitat/email"
               tal:attributes="href string:mailto:${dades_unitat/email}">
              contacte@noreply.com
            </a>
          </p>
        </address>
        <p tal:condition="dades_unitat/codi_upc">
          <a tal:attributes="href string:https://directori.upc.edu/directori/dadesUE.jsp?id=${dades_unitat/codi_upc}" target="_blank"
             i18n:translate="">Directori UPC</a>
        </p>
      </div>
      <div class="col-md-3 xarxes_socials"
           tal:condition="not:upc_config/treu_icones_xarxes_socials"
           tal:define="facebook dades_unitat/xarxes_socials/facebook;
                       instagram dades_unitat/xarxes_socials/instagram;
                       linkedin dades_unitat/xarxes_socials/linkedin;
                       twitter dades_unitat/xarxes_socials/twitter;
                       youtube dades_unitat/xarxes_socials/youtube;">

        <h2 i18n:translate="">Xarxes Socials</h2>
        <a tal:condition="facebook" tal:attributes="href facebook"
           class="facebook" target="_blank">
          <i class="bi bi-facebook"></i>
        </a>
        <a tal:condition="instagram" tal:attributes="href instagram"
           class="instagram" target="_blank">
          <i class="bi bi-instagram"></i>
        </a>
        <a tal:condition="linkedin" tal:attributes="href linkedin"
           class="linkedin" target="_blank">
          <i class="bi bi-linkedin"></i>
        </a>
        <a tal:condition="twitter" tal:attributes="href twitter"
           class="twitter" target="_blank">
          <i class="bi bi-twitter"></i>
        </a>
        <a tal:condition="youtube" tal:attributes="href youtube"
           class="youtube" target="_blank">
          <i class="bi bi-youtube"></i>
        </a>
      </div>
    </div>
  </div>
</tal:block>


